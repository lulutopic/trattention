<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".analyst"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/home"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/safari"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="0dp"
        >
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="#FFF"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="專注力月數據圖表"
                android:textColor="@color/blue"
                android:textSize="30dp">

            </TextView>
            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart"
                android:padding="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/blue"
                android:layout_marginLeft="20dp"
            />
            <ListView
                android:visibility="gone"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>
            </ListView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:elevation="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="測驗近期比較"
                    android:textColor="@color/blue"
                    android:textSize="30dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="上次測驗"
                    android:textColor="@color/blue"
                    android:textSize="30dp">

                </TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1">



            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="近期測驗"
                    android:textColor="@color/blue"
                    android:textSize="30dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/analyst_yellowback"
                android:text="開始測驗"
                android:textColor="#FFFFFFFF" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/test"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="560dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape_round"
            android:text="開始測驗"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>
</LinearLayout>